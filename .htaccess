# API Directory Security and Configuration

# Enable PHP if not already enabled
<Files ~ "\.php$">
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /path/to/your/php-error.log
</Files>

# Security Headers
<IfModule mod_headers.c>
    # Prevent access to sensitive files
    <FilesMatch "\.(env|log|sql|bak)$">
        Header set X-Robots-Tag "noindex, noarchive, nosnippet"
        Require all denied
    </FilesMatch>

    # API Security Headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

    # CORS Headers for production domain
    Header always set Access-Control-Allow-Origin "https://sakatamalaybalay.com"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header always set Access-Control-Allow-Credentials "true"
    Header always set Access-Control-Max-Age "86400"
</IfModule>

# Handle preflight OPTIONS requests
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Handle CORS preflight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]

    # Security: Block access to sensitive files
    RewriteRule \.(env|log|sql|bak)$ - [F,L]

    # Optional: Clean URL rewriting (if you want /api/slaughter instead of /api/api_slaughter.php)
    # Uncomment the lines below if you want clean URLs
    # RewriteRule ^slaughter/?$ api_slaughter.php [QSA,L]
    # RewriteRule ^clients/?$ api_clients.php [QSA,L]
    # RewriteRule ^animals/?$ api_animals.php [QSA,L]
    # Add more API endpoints as needed
</IfModule>

# Prevent access to backup and config files
<FilesMatch "\.(bak|config|sql|env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Enable compression for API responses
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# Cache static assets (if any)
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType application/json "access plus 1 hour"
</IfModule>